<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e1dddd"
    tools:context=".fragments.LinkedInFragment">

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/warcraft"
            android:layout_marginLeft="1dp"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/film_title"
                android:paddingLeft="15dp"
                android:fontFamily="sans-serif-light"
               />
            <Button
                android:id="@+id/btn_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_bgwhite"
                android:text="@string/btndtl_text"
                />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="90dp"
                android:layout_below="@id/tv_title"
                android:elevation="2dp"
                android:src="@drawable/ic_share_black_24dp"
                android:background="#FFF"/>


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_below="@id/linear_top"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/story"
            android:fontFamily="sans-serif-light"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/film_desc"
            android:fontFamily="sans-serif-light"
            android:textSize="12dp"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            />
        <TextView
            android:id="@+id/tv_readmore"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Read More"
            android:textAllCaps="true"
            android:paddingTop="15dp"
            android:textColor="#219b50"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/linear_middle"
        android:background="#f9f7f7"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_showin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/showin"
            android:fontFamily="sans-serif-light"
            android:textSize="15dp"
            android:paddingLeft="4dp"/>
        <LinearLayout
            android:id="@+id/linear_showinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:paddingLeft="4dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_showinname1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/showinname1"
                    android:fontFamily="sans-serif-light"/>
                <TextView
                    android:id="@+id/tv_showinplace1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/showinplace1"
                    android:fontFamily="sans-serif-light"/>
                <TextView
                    android:id="@+id/tv_showintime1"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/showintime1"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_showinshare1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:src="@drawable/ic_share_black_24dp1"
                   />
                <ImageView
                    android:id="@+id/iv_showincall1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_showininfo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:paddingLeft="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_showinname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/showinname2"
                    android:fontFamily="sans-serif-light"/>
                <TextView
                    android:id="@+id/tv_showinplace2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/showinplace2"
                    android:fontFamily="sans-serif-light"/>
                <TextView
                    android:id="@+id/tv_showintime2"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/showintime2"
                    android:fontFamily="sans-serif-light"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_showinshare2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_share_black_24dp1"
                    />
                <ImageView
                    android:id="@+id/iv_showincall2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_phone_black_24dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
