<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1dddd">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/nikoyenovel2"
            android:layout_alignParentLeft="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tv_winzintitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="130dp"
                android:layout_marginLeft="5dp"
                android:text="@string/noveltitle"/>
            <TextView
                android:id="@+id/tv_winzinauthour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="130dp"
                android:layout_marginLeft="5dp"
                android:text="@string/authorname"/>
            <TextView
                android:id="@+id/tv_novelprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="130dp"
                android:layout_marginLeft="5dp"
                android:text="@string/novelprice"/>
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@drawable/btn_bgyellow"
                android:layout_marginLeft="5dp"
                android:text="Buy"
                />
            <Button
                android:id="@+id/btn_sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@drawable/btn_bgyellow"
                android:layout_marginLeft="5dp"
                android:text="Sample"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_novelsize"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/novelsize"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/tv_novel"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="..."
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_novelrelatedbooks"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/relatedbook"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_comicnovels"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/comicnovel"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nikoyenovel1"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nikoyenovel3"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nikoyenovel4"/>
    </LinearLayout>
</LinearLayout>