<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b6afaf">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/images_5"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:elevation="2dp"
            android:background="@drawable/img"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingRight="200dp"
                android:src="@drawable/ic_radio_button_checked_black_24dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:src="@drawable/ic_perm_identity_black_24dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:src="@drawable/ic_search_black_24dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:src="@drawable/ic_brightness_high_black_24dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/avatar"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:paddingTop="5dp"
            android:fontFamily="sans-serif-light"
            android:textSize="20dp"
            android:text="@string/greeting"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_greeting"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:fontFamily="sans-serif-light"
            android:textSize="20dp"
            android:text="Here are your top stories for the day"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="#FFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editor's Pick"
                android:layout_alignParentLeft="true"
                android:paddingTop="25dp"
                android:paddingLeft="15dp"
                android:fontFamily="sans-serif-light"/>
            <TextView
                android:id="@+id/tv_hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3h"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentRight="true"
                android:paddingTop="25dp"
                android:paddingRight="10dp"/>
            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_remove_black_24dp"
                android:layout_below="@id/tv_heading"/>
            <TextView
                android:id="@+id/tv_heading_text"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_below="@id/iv_line"
                android:paddingLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000"
                android:text="@string/tv_heading_text"/>
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_heading_text"
                android:paddingLeft="15dp"
                android:fontFamily="sans-serif-light"
                android:text="Gordon Orr / 131 shares"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_share"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:src="@drawable/img_7"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
